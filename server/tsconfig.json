{
  "compilerOptions": {
    // Środowisko
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",

    // Node.js types
    "lib": ["esnext"],
    "types": ["node"],

    // Wyjścia
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Typowanie
    "strict": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Dodatki
    "skipLibCheck": true
  },
  "include": ["src"]
}
